<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <extension qualifier="persistence">
        <property name="defaultDataSource">${test-database.jndi}</property>
    </extension>

    <extension qualifier="persistence-dbunit">
        <property name="datatypeFactory">${db-unit.datatypeFactory}</property>
        <property name="metadataHandler">${db-unit.metadataHandler}</property>
        <property name="caseSensitiveTableNames">${db-unit.caseSensitiveTableNames}</property>
        <property name="schema">${db-unit.schema}</property>
    </extension>

    <container qualifier="wildfly-remote">
        <configuration>
            <property name="managementAddress">127.0.0.1</property>
            <property name="username">${wildfly.username}</property>
            <property name="password">${wildfly.password}</property>
        </configuration>
    </container>

    <container qualifier="wildfly-managed">
        <configuration>
            <property name="jbossHome">${wildfly.jbossHome}</property>
            <property name="javaVmArguments">${wildfly.debug-opts}</property>
        </configuration>
    </container>

</arquillian>